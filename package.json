{
  "name": "book-a-meal",
  "version": "1.0.0",
  "description": "A meal booking app built with React and Node",
  "main": "api/index.js",
  "scripts": {
    "test": "nyc mocha --require @babel/register --require @babel/polyfill --exit",
    "dev": "nodemon --exec babel-node api/index.js",
    "clean": "rm -rf ./build",
    "start": "node ./build/index.js",
    "build": "npm run clean && babel ./api -d ./build",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Oluwa-nifemi/Book-A-Meal.git"
  },
  "author": "Adeyemi Nifemi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Oluwa-nifemi/Book-A-Meal/issues"
  },
  "homepage": "https://github.com/Oluwa-nifemi/Book-A-Meal#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-latest": "^6.24.1",
    "chai": "^4.2.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "chai-http": "^4.2.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "pg": "^7.8.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.1"
  },
  "engines": {
    "node": "10.x"
  }
}
